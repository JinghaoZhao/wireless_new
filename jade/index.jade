extends _base

block vars
    -var title = "Homepage"



block content
    include _header
    div.container-fluid.indexPage
        div.col-sm-6.col-sm-push-1.indexText.text-left
            h1.text-capitalize
                strong Wireless communication and mobile networks
            br
            p
